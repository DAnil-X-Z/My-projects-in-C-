#include <iostream>
#include <cstdlib> // для  rand(), srand()
#include <ctime> // time для получения системного времени !
#include <string> 
#include <windows.h>
using namespace std;


int main() {

    SetConsoleOutputCP(CP_UTF8);
    SetConsoleCP(CP_UTF8);

    srand(time(0)); // intin gen
    int end;
    do{
        int length;
        cout << "Генератор паролей\n";
        cout << "Какой длины хотите пароль ?";
        cin >> length;
        
        if (length <= 0) {
            cout << "Длина пароля должна быть больше 0!" << endl;
        }
        else if (length > 1000) {
            cout << "Длина пароля должна быть меньше 1000!" << endl;
        }
            
        
        else {
            string pass = "";
            string chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
            
            int i = 0;
            while (i < length) {
                int randomIndex = rand() % chars.length();  // случайный индекс от 0 до 61
                pass += chars[randomIndex];                 // добавляем символ в пароль
                i++;

            }
            
            
            cout << "Твой новый пароль: " << pass << endl;
            cout << "Скопируй и сохрани свой пароль" << endl;
        }   
        cout << "Хотите сгенерировать еще один пороль ? (1-да / 0-нет): ";
        cin >> end;
    }while (end != 0);
    return 0;
}
